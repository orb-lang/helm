* Core


All =core= modules are supposed to end up in one consistent namespace.

#!lua
local escape_lua_pattern
do
  local matches =
  {
    ["^"] = "%^";
    ["$"] = "%$";
    ["("] = "%(";
    [")"] = "%)";
    ["%"] = "%%";
    ["."] = "%.";
    ["["] = "%[";
    ["]"] = "%]";
    ["*"] = "%*";
    ["+"] = "%+";
    ["-"] = "%-";
    ["?"] = "%?";
    ["\0"] = "%z";
  }

  spatToLit = function(s)
    return (s:gsub(".", matches))
  end
end

return { spatToLit = spatToLit}
#/lua